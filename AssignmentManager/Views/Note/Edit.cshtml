@model UpdateNoteViewModel
@{
}
<form method="post" asp-action="Update">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @Model.ErrorMessage</span>
        </div>
    }

<div class="form-group">
    <label asp-for="Description">Description</label>
    <textarea asp-for="Description" class="form-control" id="description" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <br />
    <button type="submit" id="submit_btn" class="btn btn-primary">Submit</button>
</div>
<div style="display: none;">
    <input id="assignmentId" asp-for="AssignmentId" type="hidden" value="@ViewBag.AssignmentId" />
     <input id="noteId" asp-for="NoteId" type="hidden" value="@ViewBag.NoteId" />
</div>


</form>
