@using AssignmentManager.Data.Enum;
@using AssignmentManager.ViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model UpdateAssignmentViewModel
@{
    <form method="post" asp-action="Update">
    <input type="hidden" asp-for="AssignmentId" value="@Model.AssignmentId" id="AssignmentId"/>
    <div class="form-group">
      <div class="row">
        <div class="col-md-12">
           <div class="row">
                <div class="col-md-8">
                    <div class="form-row">
                        <label asp-for="Name">Assignment name</label>
                        <input asp-for="Name" type="text" class="form-control" id="assignment"  placeholder="Enter your assignment name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-row">
                        <label asp-for="Priority">Priority</label>
                        <select class="form-control" asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()">
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                </div>
               <div class="col-md-2">
                    <div class="form-row">
                        <label asp-for="Status">Status</label>
                        <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()">
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
               </div>
            </div>
        </div>
      </div>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="3" placeholder="Describe your assignment"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>

}
