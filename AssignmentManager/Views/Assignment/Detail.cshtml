@using AssignmentManager.Data.Enum;
@model Assignment
@{
    ViewData["Title"] = Model.AssignmentId;
}
<div class="main-container">
    <section class="bg-white space-sm">
        <div class="container">
            <div class="row">
            <!--end of col-->
            <div class="col-lg-4 d-flex flex-column justify-content-between mr-auto ml-auto">
                <div>
                <h1 class="mb-2">@Model.Name</h1>
                <h2 class="lead mb-3">@Model.Status, @Model.Priority</h2>
                </div>
            <div class="row justify-content-between">
                <h2 class="lead mb-3">@Model.Description</h2>
            </div>
            </div>
            <!--end of col-->
            </div>
            <!--end of row-->
        </div>
    <!--end of container-->
    </section>
    <div class="d-gtid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Note" asp-action="Create" asp-route-assignmentId="@Model.AssignmentId"> Add new note</a>
    </div>
    @if (@Model.Notes != null)
    {        
        <div id="notesZone"></div>
    }
    else
    {
        <p>There's no notes yet!</p>
    }
</div>

@section Scripts{
    <script>
            $('#notesZone').load("/Note/NotesPartial/"+@Model.AssignmentId)
    </script>
}
